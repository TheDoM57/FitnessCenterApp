<Page x:Class="FitnessCenterApp.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessCenterApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="StartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="40" MaxHeight="100"></RowDefinition>
            <RowDefinition MinHeight="540"></RowDefinition>
            <RowDefinition MinHeight="30" MaxHeight="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Fill="{StaticResource AccentColor}"/>
        <TextBlock Text="Фитнес центр" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TitleText}"></TextBlock>
        <Image Source="../Assets/Images/GymMain.jpg" Grid.Row="1" Margin="0" MaxHeight="540"></Image>
        <Rectangle Fill="{StaticResource AccentColor}" Grid.Row="2"/>
        <Button Name="RegBtn" Content="Регистрация" Grid.Row="2" HorizontalAlignment="Left" Click="RegBtn_Click" Style="{StaticResource NoVerticalMarginButton}"></Button>
        <Button Name="LoginBtn" Content="Вход" Grid.Row="2" HorizontalAlignment="Right" Click="LoginBtn_Click" Style="{StaticResource NoVerticalMarginButton}"></Button>
    </Grid>
</Page>
